<%= simple_form_for([:admin, @advert], html: {class: 'form-horizontal form-show', id: 'advert_form'}) do |f| %>
    <%= f.error_notification %>

    <%= f.input :name %>
    <%= f.input :titl %>
    <%= f.input :cover, as: :file, hint: '图片高度固定为400px, 宽度适应手机,如iphone6: 700px' %>
    <%= f.input :link %>

    <div class="clearfix form-actions">
      <div class="col-md-offset-3 col-md-9">
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>

<script>
  $(function () {
    $('#advert_form').validator_b3({
      errorElement: 'div',
      errorClass: 'help-block',
      focusInvalid: false,
      rules: {},
      messages: {}
    });


    $('.nav.nav-list li.active').removeClass('active');
    $('.nav.nav-list li[data-model="advert_list"]').addClass('active');
  });
</script>
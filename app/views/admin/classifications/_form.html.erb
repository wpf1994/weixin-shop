<%= simple_form_for([:admin, @classification], html: {class: 'form-horizontal form-show',id: 'classification_form' }) do |f| %>
<%= f.error_notification %>

  <%= f.input :name %>
  <%= f.association :parent %>
  <%= f.input :position %>
    <%= f.input :single_statistics, wrapper: :horizontal_radio_and_checkboxes %>
<div class="clearfix form-actions">
  <div class="col-md-offset-3 col-md-9">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
</div>
<% end %>

<script>
    $(function () {
        $('#classification_form').validator_b3({
            errorElement: 'div',
            errorClass: 'help-block',
            focusInvalid: false,
            rules: {
            },
            messages: {
            }
        });


        $('.nav.nav-list li.active').removeClass('active');
        $('.nav.nav-list li[data-model="classification_list"]').addClass('active');
    } );
</script>
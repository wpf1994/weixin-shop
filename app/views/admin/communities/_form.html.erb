<%= simple_form_for([:admin, @community], html: {class: 'form-horizontal form-show',id: 'community_form' }) do |f| %>
<%= f.error_notification %>

  <%= f.input :name %>
  <%= f.association :kind_name %>
  <%= f.association :region %>

<div class="clearfix form-actions">
  <div class="col-md-offset-3 col-md-9">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
</div>
<% end %>

<script>
    $(function () {
        $('#community_form').validator_b3({
            errorElement: 'div',
            errorClass: 'help-block',
            focusInvalid: false,
            rules: {
            },
            messages: {
            }
        });


        $('.nav.nav-list li.active').removeClass('active');
        $('.nav.nav-list li[data-model="community_list"]').addClass('active');
    } );
</script>
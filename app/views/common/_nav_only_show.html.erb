<ul class="nav nav-tabs">
  <li <%= 'class=active' if show_tab == :index %>>
    <%= link_to send("#{model_nav_name.to_s.pluralize}_path") do %>
        <i class="blue icon-th-list"></i> <%= t 'common.list' %>
    <% end %>
  </li>
  <% if [:show, :edit].include?(show_tab) %>
      <li <%= 'class=active' if show_tab == :show %>>
        <%= link_to send("#{model_nav_name}_path"), class: pjax ? :pjax : '' do %>
            <i class="green icon-info-sign"></i> <%= t 'common.show' %>
        <% end %>
      </li>
      </li>
  <% end %>
</ul>